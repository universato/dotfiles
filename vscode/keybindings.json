// Place your key bindings in this file to override the defaults
[
  {
    "key": "ctrl+d",
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+d",
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+f",
    "command": "actions.find",
    "when": "editorFocus || editorIsOpen"
  },
  {
    "key": "alt+g",
    "command": "cursorBottom",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+h ctrl+h",
    "command": "editor.action.startFindReplaceAction",
    "when": "editorFocus || editorIsOpen"
  },
  {
    "key": "cmd+h cmd+h",
    "command": "editor.action.startFindReplaceAction",
    "when": "editorFocus || editorIsOpen"
  },
  {
    "key": "ctrl+u",
    "command": "extension.changeCase.upper",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+u",
    "command": "extension.changeCase.upperFirst",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+y",
    "command": "redo",
    "when": "editorTextFocus"
  },
  // {
  //   "key": "shift+backspace",
  //   "command": "deleteRight",
  //   "when": "textInputFocus"
  // },
  {
    "key": "ctrl+b",
    "command": "-cursorLeft",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+d",
    "command": "-deleteRight",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+f",
    "command": "-cursorRight",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+h",
    "command": "-deleteLeft",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+n",
    "command": "-cursorDown",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+p",
    "command": "-cursorUp",
    "when": "textInputFocus"
  },
  // {
  //   "key": "shift+backspace",
  //   "command": "-deleteLeft",
  //   "when": "textInputFocus"
  // },
  {
    "key": "ctrl+backspace",
    "command": "-deleteLeft",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+delete",
    "command": "-deleteRight",
    "when": "textInputFocus"
  }
]
